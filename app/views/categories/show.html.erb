<div class="flex flex-col h-screen justify-between w-max1">
  <div>
    <div class="navigation py-6 px-3 blue-nav-white-text">
      <ul class="flex justify-between items-center">
        <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
        <h2><strong><%= @category.name %></strong></h2>
        <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-green" %></li>
      </ul>
    </div>
    <p style="color: green"><%= notice %></p>
<%= render "shared/category", category: @category %>
    <section class="px-5">
      | <%= link_to "home purchase", purchases_path, class: "text-green " %>
      <div id="purchases">
        <% @purchases.each do |purchase| %>
          <a href="<%= category_purchase_path(@category, purchase) %>" class="m-1">
          <%= render "shared/purchase", purchase: purchase %>
          </a>
        <% end %>
      </div>
    </section>
  </div>

  <section class="flex flex-col space-y-2 p-5">
      <%= link_to new_category_purchase_path(@category) do %>
        <button data-testid="new-purchase-button" class="drop-shadow-md p-3 w-full green-btn hover:text-white rounded-md hover:bg-green-600 focus:outline-none focus:bg-green-600 text-color width_max">
          New purchase
        </button>
          <% end %>
      </a>

      <%= link_to edit_category_path(@category) do %>
        <button data-testid="edit-category-button" class="drop-shadow-md p-3 orange-btn bg-white w-full rounded hover:bg-orange-600 width_max">Edit category</button>
      <% end %>

      <%= button_to "Delete category", @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "drop-shadow-md w-full p-3 red-btn hover:text-white rounded-md hover:bg-red-600 focus:outline-none focus:bg-red-600 text-color width_max" %>
    </section>
  </div>