<div class = "flex_d">
<h2 class = "text-green text-size">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <h1 class=" text-4xl font-extrabold video_style position">
<%= video_tag video_path('budget_logo_vid.mp4'), autoplay: :autoplay, loop: :loop, muted: :muted %>
  </h1>
  <div class="mt-10 ml-12 flex flex-col gap-3 ms-4 justify-center content-center  flex-grow">
  <div class="field border-t-2 mt-10 ">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: ' border-none', placeholder: 'Name' %>
  </div>

  <div class="field border-t-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border-none', placeholder: 'Email' %>
  </div>

  <div class="field border-t-2">
    <%= f.password_field :password, autocomplete: "new-password", class: '  border-none', placeholder: 'Password (6 characters minimum)' %>
  </div>

  <div class="field border-y-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border-none', placeholder: 'Password confirmation' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: ' green-btn text-white' %>
  </div>

<%= render "devise/shared/links" %>
    </div>
<% end %>
 </div>